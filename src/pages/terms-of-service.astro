---
import MainLayout from "../layouts/MainLayout.astro";
import Logo from "../assets/logo.svg";
import ThemeToggle from "../components/shared/ThemeToggle.astro";

const title = "Terms of Service – SubEye";
const description =
  "Read the SubEye Terms of Service. Learn about your rights, data privacy, payments, and acceptable use of our subscription tracking platform.";
---

<MainLayout
  lang="en"
  title={title}
  description={description}
  pathname="terms-of-service/"
>
  <header
    class="border-border/60 sticky top-0 z-30 border-b print:static print:border-none"
  >
    <div
      class="bg-background/50 container flex items-center justify-between gap-4 py-4 backdrop-blur-xl print:bg-transparent print:backdrop-blur-none"
    >
      <a href="/" class="flex shrink-0 items-center gap-2">
        <Logo aria-label="SubEye logo" class="h-auto w-10" />
        <span class="text-sm font-semibold tracking-tight">SubEye</span>
      </a>
      <div class="flex items-center gap-2">
        <a
          href="/ua/terms-of-service/"
          class="text-muted-foreground hover:text-foreground text-xs transition-colors print:hidden"
        >
          Українська
        </a>
        <span class="print:hidden"><ThemeToggle /></span>
      </div>
    </div>
  </header>

