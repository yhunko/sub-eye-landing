---
import type { LandingDict } from "../../i18n";
import Button from "../shared/Button.astro";
import SectionHeader from "../shared/SectionHeader.astro";

interface Props {
  t: LandingDict;
}

const { t } = Astro.props;
---

<section
  id="cta"
  class="scroll-mt-12 bg-[radial-gradient(circle_at_bottom,_rgba(45,212,191,0.24),_transparent_55%)]"
>
  <div class="container space-y-8 py-12 text-center sm:py-16 lg:py-20">
    <SectionHeader
      title={t.sections.ctaTitle}
      subtitle={t.sections.ctaSubtitle}
      centered
      class="mx-auto"
    />
    <div
      class="flex flex-col items-center justify-center gap-3 sm:flex-row sm:gap-4"
    >
      <Button href="https://app.subeye.cc/auth/sign-up">
        {t.sections.ctaPrimary}
      </Button>
      <Button href="https://app.subeye.cc/auth/sign-in" variant="secondary">
        {t.sections.ctaSecondary}
      </Button>
    </div>
    <p class="text-muted-foreground text-[11px]">{t.sections.ctaNote}</p>
  </div>
</section>
