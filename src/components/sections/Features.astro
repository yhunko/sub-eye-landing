---
import type { LandingDict } from "../../i18n";
import SectionHeader from "../shared/SectionHeader.astro";
import Card from "../shared/Card.astro";

interface Props {
  t: LandingDict;
}

const { t } = Astro.props;

const icons = [
  // Radar icon
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M19.07 4.93A10 10 0 0 0 6.99 3.34M4 6h.01M2.29 9.62a10 10 0 1 0 19.02-1.27"/><path d="M16.24 7.76a6 6 0 1 0-8.01 8.91M12 18h.01m5.98-6.34a6 6 0 0 1-2.22 5.01"/><circle cx="12" cy="12" r="2"/><path d="m13.41 10.59l5.66-5.66"/></g></svg>`,
  // Calendar icon
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M8 2v4m8-4v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></g></svg>`,
  // Copy icon
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></g></svg>`,
  // Shield icon
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>`,
];
---

<section
  id="product"
  class="border-border/60 scroll-mt-12 border-b bg-[radial-gradient(circle_at_top_right,rgba(129,140,248,0.12),transparent_40%),radial-gradient(circle_at_bottom_left,rgba(45,212,191,0.1),transparent_40%)]"
>
  <div class="container space-y-12 py-16 sm:py-24">
    <SectionHeader
      title={t.sections.featuresTitle}
      subtitle={t.sections.featuresSubtitle}
    />

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {
        t.features.map((feature, index) => (
          <Card class="group hover:bg-card/60 hover:shadow-primary/5 cursor-default p-6 hover:-translate-y-1 hover:shadow-xl sm:p-8">
            <div class="bg-primary/10 text-primary ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground mb-5 inline-flex size-10 items-center justify-center rounded-xl ring-1 transition-colors ring-inset">
              <Fragment set:html={icons[index]} />
            </div>
            <h3 class="group-hover:text-primary mb-3 text-base font-semibold transition-colors">
              {feature.title}
            </h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              {feature.description}
            </p>
          </Card>
        ))
      }
    </div>
  </div>
</section>
