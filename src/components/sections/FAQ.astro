---
import type { LandingDict } from "../../i18n";
import SectionHeader from "../shared/SectionHeader.astro";
import FAQItem from "../shared/FAQItem.astro";

interface Props {
  t: LandingDict;
}

const { t } = Astro.props;

const icons = [
  // Help circle
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3m.08 4h.01"/></g></svg>`,
  // Dollar sign
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2v20m5-17H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>`,
  // Search
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="m21 21l-4.34-4.34"/><circle cx="11" cy="11" r="8"/></g></svg>`,
  // Mouse pointer click
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 4.1L12 6M5.1 8l-2.9-.8M6 12l-1.9 2M7.2 2.2L8 5.1m1.037 4.59a.498.498 0 0 1 .653-.653l11 4.5a.5.5 0 0 1-.074.949l-4.349 1.041a1 1 0 0 0-.74.739l-1.04 4.35a.5.5 0 0 1-.95.074z"/></svg>`,
  // Lock
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Lucide by Lucide Contributors - https://github.com/lucide-icons/lucide/blob/main/LICENSE --><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></g></svg>`,
];
---

<section
  id="faq"
  class="border-border/60 bg-background/70 scroll-mt-12 border-b"
>
  <div class="container space-y-12 py-16 sm:py-24">
    <SectionHeader
      title={t.sections.faqTitle}
      subtitle={t.sections.faqSubtitle}
    />

    <div class="grid gap-4 lg:grid-cols-2 lg:items-start">
      <ul class="grid gap-4">
        {
          t.faq
            .filter((_, i) => i % 2 === 0)
            .map((item, i) => {
              const originalIndex = i * 2;
              return (
                <li>
                  <FAQItem
                    question={item.q}
                    answer={item.a}
                    icon={icons[originalIndex]}
                  />
                </li>
              );
            })
        }
      </ul>
      <ul class="grid gap-4">
        {
          t.faq
            .filter((_, i) => i % 2 !== 0)
            .map((item, i) => {
              const originalIndex = i * 2 + 1;
              return (
                <li>
                  <FAQItem
                    question={item.q}
                    answer={item.a}
                    icon={icons[originalIndex]}
                  />
                </li>
              );
            })
        }
      </ul>
    </div>
  </div>
</section>
