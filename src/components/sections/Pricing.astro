---
import type { LandingDict } from "../../i18n";
import SectionHeader from "../shared/SectionHeader.astro";
import Button from "../shared/Button.astro";
import Card from "../shared/Card.astro";
import Pill from "../shared/Pill.astro";

interface Props {
  t: LandingDict;
}

const { t } = Astro.props;
---

<section
  id="pricing"
  class="border-border/60 scroll-mt-12 border-b bg-[radial-gradient(circle_at_top,rgba(59,130,246,0.32),transparent_55%)]"
>
  <div class="container space-y-10 py-12 sm:py-16 lg:py-20">
    <SectionHeader
      title={t.sections.pricingTitle}
      subtitle={t.sections.pricingSubtitle}
    />

    <div
      class="grid items-start gap-6 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,1fr)]"
    >
      <Card variant="primary" class="space-y-5 p-6 sm:p-7 lg:p-8">
        <div
          class="flex flex-col flex-wrap items-baseline justify-between gap-4"
        >
          <div class="space-y-1.5">
            <Pill>{t.pricing.badge}</Pill>
            <h3 class="text-lg font-semibold sm:text-xl">{t.pricing.name}</h3>
            <p class="text-muted-foreground max-w-md text-xs sm:text-sm">
              {t.pricing.description}
            </p>
          </div>
          <div class="self-end">
            <span class="text-2xl font-semibold sm:text-3xl"
              >{t.pricing.price}</span
            >
            <span class="text-muted-foreground text-xs">{t.pricing.per}</span>
          </div>
          <p class="text-muted-foreground mt-1 text-[11px]">
            {t.pricing.priceNote}
          </p>
        </div>

        <Button href="https://app.subeye.cc/auth/sign-up" class="w-full">
          {t.pricing.cta}
        </Button>

        <div class="space-y-3 pt-1">
          <p
            class="text-muted-foreground text-xs font-medium tracking-[0.18em] uppercase"
          >
            {t.pricing.includesTitle}
          </p>
          <ul class="space-y-2 text-xs sm:text-sm">
            {
              t.pricing.includes.map((item) => (
                <li class="flex items-center gap-2">
                  <span class="inline-flex size-1.5 rounded-full bg-emerald-400 shadow-[0_0_0_4px_rgba(16,185,129,0.4)]" />
                  <span class="text-muted-foreground">{item}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </Card>

      <Card class="space-y-4 p-5 sm:p-6 lg:p-7">
        <h3 class="text-base font-semibold sm:text-lg">
          {t.pricing.futureTitle}
        </h3>
        <p class="text-muted-foreground text-sm">{t.pricing.futureCopy}</p>
        <p class="text-muted-foreground/80 text-xs">{t.pricing.futureExtra}</p>
      </Card>
    </div>
  </div>
</section>
