---
import GitHubIconIcon from "./icons/GitHubIcon.astro";
import type { Lang, LandingDict } from "../../i18n";

interface Props {
  lang: Lang;
  t: LandingDict;
}

const { lang, t } = Astro.props;
const tosHref = lang === "ua" ? "/ua/terms-of-service/" : "/terms-of-service/";
---

<footer class="border-border/60 bg-background/80 border-t backdrop-blur">
  <div
    class="text-muted-foreground container flex flex-col items-center justify-between gap-4 py-8 text-xs sm:py-10 sm:text-sm md:flex-row"
  >
    <p>Â© {new Date().getFullYear()} SubEye. {t.footer.rights}</p>
    <div class="flex flex-col items-center gap-1 md:flex-row md:gap-4">
      <a href={tosHref} class="hover:text-foreground transition-colors">
        {t.footer.termsOfService}
      </a>
      <span>{t.footer.tagline}</span>
      <!--<a-->
