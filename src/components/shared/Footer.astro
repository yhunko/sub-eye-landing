---
import GitHubIconIcon from "./icons/GitHubIcon.astro";
import type { LandingDict } from "../../i18n";

interface Props {
  t: LandingDict;
}

const { t } = Astro.props;
---

<footer class="border-border/60 bg-background/80 border-t backdrop-blur">
  <div
    class="text-muted-foreground container flex flex-col items-center justify-between gap-4 py-8 text-xs sm:py-10 sm:text-sm md:flex-row"
  >
    <p>Â© {new Date().getFullYear()} SubEye. {t.footer.rights}</p>
    <div class="flex flex-col items-center gap-1 md:flex-row md:gap-4">
      <span>{t.footer.tagline}</span>
      <a
        href="mailto:hello@subeye.cc"
        class="hover:text-foreground transition-colors"
      >
        {t.footer.contact}
      </a>

      <div class="hidden flex-row gap-1 md:flex">
        <a
          href="https://github.com/yhunko/sub-eye"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub link"
          class="transition-transform duration-300 will-change-transform hover:scale-110"
        >
          <GitHubIconIcon class="size-8" />
        </a>
      </div>
    </div>
  </div>
</footer>
