---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = false, class: className } = Astro.props;
---

<div
  class:list={[
    "max-w-2xl space-y-4",
    centered && "mx-auto text-center",
    className,
  ]}
>
  <h2 class="text-3xl font-semibold tracking-tight text-balance sm:text-4xl">
    {title}
  </h2>
  {
    subtitle && (
      <p class="text-muted-foreground text-base sm:text-lg">{subtitle}</p>
    )
  }
</div>
